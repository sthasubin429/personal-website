---
import FeaturedProjectCard from './Shared/FeaturedProjectCard.astro';
import { featuredProjects } from '../utils/projects';
import type { ProjectType } from '../utils/types';
import LinkButton from './Shared/LinkButton.astro';
---

<div class="p-4 md:p-10 lg:p-16" id="projects" aria-labelledby="projects-heading">
  <h2 class="text-2xl font-bold text-slate-200 mb-6">Some things I've Built</h2>
  <div class="w-full flex flex-col space-y-4">
    {
      featuredProjects.map((project: ProjectType, index: number) => (
        <div class={`w-full flex ${index % 2 === 0 ? 'justify-start' : 'justify-end'}`}>
          <FeaturedProjectCard
            title={project.title}
            description={project.description}
            imageUrl={project.imageUrl}
            projectUrl={project.projectUrl}
            repoUrl={project.repoUrl}
            techStack={project.techStack}
          />
        </div>
      ))
    }
  </div>
  <div class="w-full grid place-items-center my-8">
    <LinkButton
      href="https://github.com/sthasubin429?tab=repositories"
      text="Show More"
      label="GitHub Repositories"
      external={true}
    />
  </div>
</div>
