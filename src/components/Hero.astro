---
import IconEmail from './icons/IconEmail.astro';
import IconGithub from './icons/IconGithub.astro';
import IconLinkedin from './icons/IconLinkedin.astro';
import IconYoutube from './icons/IconYoutube.astro';
import Link from './Shared/Link.astro';
---

<main class='h-screen flex justify-start items-center relative overflow-hidden'>
  <!-- Creative floating shapes -->
  <div class='absolute top-[15%] right-[8%] w-40 h-40 border border-teal-400/[0.08] rounded-full float-drift hidden lg:block' aria-hidden='true'></div>
  <div class='absolute top-[18%] right-[10%] w-24 h-24 border border-teal-300/[0.06] rounded-full float-drift hidden lg:block' style='animation-delay: -1s;' aria-hidden='true'></div>
  <div class='absolute bottom-[30%] right-[15%] w-20 h-20 bg-gradient-to-br from-teal-500/[0.06] to-transparent rounded-2xl rotate-12 float-drift hidden lg:block' style='animation-delay: -3s;' aria-hidden='true'></div>
  <div class='absolute top-[40%] right-[5%] w-3 h-3 bg-teal-400/30 rounded-full float-drift hidden lg:block' style='animation-delay: -5s;' aria-hidden='true'></div>
  <div class='absolute bottom-[25%] right-[25%] w-1.5 h-1.5 bg-teal-300/40 rounded-full float-drift hidden lg:block' style='animation-delay: -2s;' aria-hidden='true'></div>
  <div class='absolute top-[60%] right-[12%] w-12 h-12 border border-dashed border-teal-500/[0.1] rounded-lg rotate-45 float-drift hidden lg:block' style='animation-delay: -4s;' aria-hidden='true'></div>
  <!-- Gradient orb -->
  <div class='absolute top-[25%] right-[20%] w-64 h-64 bg-gradient-radial from-teal-500/[0.04] to-transparent rounded-full blur-3xl hidden lg:block' aria-hidden='true'></div>

  <div class='px-2 sm:px-4 md:px-8 lg:px-16 relative z-10'>
    <!-- Artistic intro with accent -->
    <div class='flex items-center gap-3 mb-2 float-up-delay-1'>
      <div class='w-12 h-[2px] bg-gradient-to-r from-teal-400 to-transparent'></div>
      <p class='text-teal-300 font-mono text-sm tracking-wider uppercase'>Data Analyst & Software Engineer</p>
    </div>

    <!-- Main heading with gradient accent -->
    <h1 class='font-bold m-0 text-[clamp(44px,9vw,90px)] leading-[0.95] float-up-delay-1'>
      <span class='text-slate-200'>Subin</span>
      <span class='gradient-text'> Shrestha</span>
    </h1>

    <!-- Artistic tagline -->
    <h3 class='font-medium m-0 text-slate-400 text-[clamp(18px,3vw,24px)] mt-4 float-up-delay-2 max-w-xl'>
      I craft <span class='text-slate-200 italic'>data narratives</span> and build
      <span class='text-slate-200 italic'>elegant solutions</span> that make complexity feel simple.
    </h3>

    <p class='w-full lg:w-7/10 mt-6 float-up-delay-3 text-slate-400 leading-relaxed'>
      Currently shaping research at
      <Link
        href='https://students.langara.ca/about-langara/applied-research/index.html'
        label='Applied Research Center'
      >
        Langara's Applied Research Center
      </Link> â€” where I transform raw data into actionable insights and build ML models that actually matter.
    </p>

    <!-- Social links with playful styling -->
    <div class='flex justify-start items-center gap-6 mt-10 float-up-delay-3'>
      <a
        href='https://github.com/sthasubin429'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='GitHub'
        class='text-slate-500 hover:text-teal-300 transition-colors duration-300 wiggle-hover'
      >
        <IconGithub alt='GitHub icon' />
      </a>
      <a
        href='https://www.linkedin.com/in/subinsth/'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='LinkedIn'
        class='text-slate-500 hover:text-teal-300 transition-colors duration-300 wiggle-hover'
      >
        <IconLinkedin alt='LinkedIn icon' />
      </a>
      <a
        href='mailto:subinshrestha922@gmail.com'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='Email'
        class='text-slate-500 hover:text-teal-300 transition-colors duration-300 wiggle-hover'
      >
        <IconEmail alt='Email icon' height='28' width='28' />
      </a>
      <a
        href='https://www.youtube.com/watch?v=dQw4w9WgXcQ'
        target='_blank'
        rel='noopener noreferrer'
        aria-label='YouTube'
        class='text-slate-500 hover:text-teal-300 transition-colors duration-300 wiggle-hover'
      >
        <IconYoutube alt='YouTube icon' height='28' width='28' />
      </a>
      <!-- Playful separator -->
      <div class='hidden sm:block w-24 h-[1px] bg-gradient-to-r from-slate-600 to-transparent ml-2'></div>
    </div>
  </div>
</main>
