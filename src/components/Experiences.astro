---
import ExperienceCard from './Shared/ExperienceCard.astro';

const experiences = [
  {
    role: 'Student Aide',
    company: 'Applied Research Center, Langara College',
    duration: 'Mar 2025 – Present',
    description:
      'Cleaned and analyzed complex datasets using Python, processing 50,000+ data points to support academic research initiatives. Executed statistical tests including regression analysis and hypothesis testing, identifying meaningful patterns that enhanced research conclusions. Created interactive data visualizations and dashboards using matplotlib and seaborn, presenting findings to 5+ faculty members and research partners.',
    link: 'https://students.langara.ca/about-langara/applied-research/index.html',
    keywords: [
      'Python',
      'Data Analysis',
      'Statistical Testing',
      'matplotlib',
      'seaborn',
      'Data Visualization',
    ],
  },
  {
    role: 'Peer Tutor',
    company: 'Langara College',
    duration: 'May 2025 – Present',
    description:
      'Tutored 25+ students in Data Analytics and Computer Science courses, achieving 100% student pass rate. Guided students through complex predictive analytics concepts including regression analysis, ANOVA, and generalized linear models. Mentored students in Python and R programming, database management courses including data transformation, cleaning and ETL processes.',
    link: 'https://langara.ca/',
    keywords: ['Tutoring', 'Data Analytics', 'Python', 'R', 'ETL', 'Regression Analysis', 'ANOVA'],
  },
  {
    role: 'Software Engineer',
    company: 'Outcode Software',
    duration: 'Mar 2023 – Dec 2024',
    description:
      'Led development team to architect and deploy enterprise live streaming platform leveraging Amazon IVS, delivering sub-5 second latency performance for 10,000+ concurrent users. Led weekly client stakeholder meetings and agile sprint planning for 5-person development team, reducing project delivery time by 25% and maintaining zero scope creep. Conducted comprehensive code reviews for 8-member development team and established a companywide Angular Architecture standard.',
    link: 'https://www.outcodesoftware.com/',
    keywords: ['Amazon IVS', 'Live Streaming', 'Angular', 'Agile', 'Code Review', 'Architecture'],
  },
  {
    role: 'Associate Software Engineer',
    company: 'Bajra Technologies',
    duration: 'Aug 2021 – Feb 2023',
    description:
      'Collaborated in a cross-functional team to design and develop a large-scale web application using Angular and Ruby on Rails. Applied responsive design principles and UI/UX fundamentals, creating mobile-first applications with 100% cross-browser compatibility. Spearheaded Test-Driven Development adoption across 3+ development team, wrote and reviewed comprehensive unit tests, ensuring high code coverage, maintainability, and adherence to best practices. Contributed to system architecture and database design, optimizing performance, scalability, and long-term maintainability.',
    link: 'https://bajratechnologies.com/',
    keywords: [
      'Angular',
      'Ruby on Rails',
      'Responsive Design',
      'UI/UX',
      'TDD',
      'Unit Testing',
      'Database Design',
    ],
  },
  {
    role: 'Software Engineering Intern',
    company: 'Leapfrog Technology Inc.',
    duration: 'Dec 2020 – Feb 2021',
    description:
      'Mastered fundamentals of design, web-development and object-oriented programming principles in JavaScript, completing 10+ coding challenges with 95% accuracy. Built 5 mini-projects and 1 capstone web application demonstrating proficiency in modern web development practices. Applied responsive design principles and UI/UX fundamentals, creating mobile-first applications with 100% cross-browser compatibility.',
    link: 'https://www.lftechnology.com/',
    keywords: ['JavaScript', 'Web Development', 'OOP', 'Responsive Design', 'UI/UX'],
  },
];
---

<section class="w-full mt-4" aria-labelledby="experience-heading">
  <h2 id="experience-heading" class="text-xl font-semibold p-4 text-slate-200 mb-4 block lg:hidden">
    Experience
  </h2>
  <div class="flex flex-col" role="list">
    {
      experiences.map(exp => (
        <ExperienceCard
          role={exp.role}
          company={exp.company}
          years={exp.duration}
          description={exp.description}
          link={exp.link}
          keywords={exp.keywords}
          aria-label={`${exp.role} at ${exp.company}, ${exp.duration}`}
        />
      ))
    }
  </div>
</section>
